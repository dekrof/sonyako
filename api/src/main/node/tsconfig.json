{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "removeComments": true,
        "allowSyntheticDefaultImports": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@translation/*": [
                "com/makeit/web/translation/*"
            ],
            "@component/*": [
                "com/makeit/web/component/*"
            ],
            "@client/*": [
                "com/makeit/web/client/*"
            ],
            "@model/*": [
                "com/makeit/web/model/*"
            ],
            "@page/*": [
                "com/makeit/web/page/*"
            ],
            "@css/*": [
                "com/makeit/web/asset/css/*"
            ],
            "@svg/*": [
                "com/makeit/web/asset/svg/*"
            ],
            "@png/*": [
                "com/makeit/web/asset/png/*"
            ]
        },
        "types": [
            "reflect-metadata",
            "node",
            "./com/makeit/web/types"
        ]
    },
    "include": [
        "./com/makeit/web"
    ]
}
